<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fitme.android.fitme.MemberApp.classInfoFragment.ClassFragment"
    android:orientation="vertical"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="74dp"
      android:orientation="horizontal"
      tools:layout_editor_absoluteY="333dp"
      >
    <ImageView
        android:id="@+id/class_image"
        android:layout_width="91dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        app:srcCompat="@drawable/ic_jump_big"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        >

      <TextView
          android:id="@+id/class_name"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/class_name"
          android:textColor="@color/colorSecondaryDark"
          android:textSize="@dimen/sub_title"
          android:textStyle="bold"
          />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal"
          >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="10dp"
            android:text="@string/class_availability_name"
            android:textSize="@dimen/subsub_title"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/class_availability"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/class_availability"
            android:textColor="@color/colorGreen"
            android:textSize="@dimen/subsub_title"
            android:textStyle="bold"
            />
      </LinearLayout>

    </LinearLayout>
  </LinearLayout>

  <TextView
      android:id="@+id/class_description"
      android:layout_width="match_parent"
      android:layout_height="83dp"
      android:maxLines="5"
      android:paddingTop="8dp"
      android:singleLine="false"
      android:text="@string/class_description"
      android:textSize="@dimen/normal_text"
      />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

      <TextView
          android:layout_width="153dp"
          android:layout_height="match_parent"
          android:paddingRight="10dp"
          android:text="Monitor"
          android:textSize="@dimen/subsub_title"
          android:textStyle="bold"
          android:textColor="@color/colorPrimaryDarkDark"
          android:layout_gravity="center_vertical"
          />

      <TextView
          android:id="@+id/class_name_monitor"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:textSize="@dimen/subsub_title"
          android:textColor="@color/colorPrimaryMedium"
          android:layout_gravity="center_vertical"
          />
    </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:paddingTop="10dp"
      >

    <TextView
        android:layout_width="153dp"
        android:layout_height="wrap_content"
        android:text="Duration"
        android:textSize="@dimen/subsub_title"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDarkDark"
        android:layout_gravity="center_vertical"
        />

    <TextView
        android:id="@+id/class_duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/subsub_title"
        android:textColor="@color/colorPrimaryMedium"
        android:layout_gravity="center_vertical"
        />
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:paddingTop="10dp"
      >

    <TextView
        android:layout_width="153dp"
        android:layout_height="wrap_content"
        android:text="Intensity"
        android:textStyle="bold"
        android:textSize="@dimen/subsub_title"
        android:textColor="@color/colorPrimaryDarkDark"
        android:layout_gravity="center_vertical"
        />
    <ProgressBar
        android:id="@+id/class_intensity"
        android:layout_width="match_parent"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_height="wrap_content"
        android:maxHeight="20dp"
        android:layout_gravity="center_vertical"
        android:progress="25"
        android:progressBackgroundTint="@color/colorPrimary"
        android:progressTint="@color/colorSecondary"
        android:max="99"
        />

  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:paddingTop="10dp">

    <TextView
        android:layout_width="153dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="Weight Loss"
        android:textColor="@color/colorPrimaryDarkDark"
        android:textSize="@dimen/subsub_title"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/class_weight_loss"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:maxHeight="20dp"
        android:progress="99"
        android:progressBackgroundTint="@color/colorPrimary"
        android:progressTint="@color/colorSecondary"
        android:max="99"/>

  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:paddingTop="10dp"
      >

    <TextView
        android:layout_width="153dp"
        android:layout_height="wrap_content"
        android:text="Relaxation"
        android:textSize="@dimen/subsub_title"
        android:textColor="@color/colorPrimaryDarkDark"
        android:textStyle="bold"
        android:layout_gravity="center_vertical"

        />
    <ProgressBar
        android:id="@+id/class_relaxation"
        android:layout_width="match_parent"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_height="wrap_content"
        android:maxHeight="20dp"
        android:layout_gravity="center_vertical"
        android:progress="25"
        android:progressBackgroundTint="@color/colorPrimary"
        android:progressTint="@color/colorSecondary"
        android:max="99"
        />

  </LinearLayout>

  <Button
      android:id="@+id/class_btn_subscribe"
      android:layout_width="110dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:background="@color/colorSecondaryDark"
      android:text="@string/action_subscribe"
      android:textColor="@android:color/white"
      android:textStyle="bold"
      style="?android:textAppearanceSmall"
      android:layout_marginTop="60dp"
      />



</LinearLayout>
